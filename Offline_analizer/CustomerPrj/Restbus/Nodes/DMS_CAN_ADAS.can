void DMS_sim_Reset()
{

  DMS_sim_DisableMsg();
  DMS_sim_Disable();

  if ((@Cus_bus::bus_CAN_ADAS_ON_OFF == 1) && (@hil_ctrl::dms_sim == 1))
  {
    switch(@hil_ctrl::variant)
    {
      case a_variant:DMS_sim_start_a_variant();break;
      case b_variant:DMS_sim_start_b_variant();break;
    }
    if (@hil_ctrl::hil_mode == @hil_ctrl::hil_mode::Restbus) 
    {
       DMS_sim_EnableEventMsg();
    }
    else
    {
       DMS_sim_DisableEventMsg();
    }
  }
}

