void cfg_Msg_DMS_HSC4_FrP01(dword aDlc, byte data[])
{
   int64 i,k;//For looping
   byte xor,data_byte;
   dword crcTemp;
   byte DataLength;
   dword Msg_id;
   
   DataLength = Msg_DMS_HSC4_FrP01.DataLength;//Message Data Length
   Msg_id  = Msg_DMS_HSC4_FrP01.id;//Message ID
   
    if (@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_RolingCounterHSC4_FaultInject != 3)//AC: user defined value
    {

    clearBitsInByteArrayBE(data,48,51,4); //Motorola / Big-endian

    }
    if (@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_RolingCounterHSC4_FaultInject == 0)//AC: No Error, calculate AC
    {
      ++counter_DMS_HSC4_FrP01_DMS_FrP01_RolingCounterHSC4;
      counter_DMS_HSC4_FrP01_DMS_FrP01_RolingCounterHSC4 %=15;

      copyBitsToByteArrayBE(counter_DMS_HSC4_FrP01_DMS_FrP01_RolingCounterHSC4,data,48,4); //Motorola / Big-endian
    }
    else if (@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_RolingCounterHSC4_FaultInject == 1)//AC: Error sequence: set AC = 0
    {

      copyBitsToByteArrayBE(0,data,48,4); //Motorola / Big-endian
    }
    else if (@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_RolingCounterHSC4_FaultInject == 2)//AC: Error sequence: Freeze last valid value
    {

      copyBitsToByteArrayBE(counter_DMS_HSC4_FrP01_DMS_FrP01_RolingCounterHSC4,data,48,4); //Motorola / Big-endian
    }
    if (@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_ChecksumHSC4_FaultInject != 3)//CRC: user defined value
    {

    clearBitsInByteArrayBE(data,56,63,8); //Motorola / Big-endian

    }
    if(@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_ChecksumHSC4_FaultInject == 0)//CRC: No Error, calculate CRC
    {
      xor = initialization_value;
      for(i = 0; i < DataLength; i++)
      {
        if(i==0)
          xor = CRC8_SAE_J1850_Poly_1D_Lookup[Data_ID_Lookup(Msg_id) ^ xor];
        else
          xor = CRC8_SAE_J1850_Poly_1D_Lookup[ data[i] ^ xor ];
      }
      chksum_DMS_HSC4_FrP01_DMS_FrP01_ChecksumHSC4 = result_XOR_value ^ xor;

      copyBitsToByteArrayBE(chksum_DMS_HSC4_FrP01_DMS_FrP01_ChecksumHSC4,data,56,8); //Motorola / Big-endian
    }
    else if(@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_ChecksumHSC4_FaultInject == 1)//CRC: Error, set to Zero
    {

      copyBitsToByteArrayBE(0,data,56,8); //Motorola / Big-endian
    }
    else if(@CAN_ADAS::DMS_HSC4_FrP01::DMS_FrP01_ChecksumHSC4_FaultInject == 2)//CRC: Error, Freeze last valid value
    {

      copyBitsToByteArrayBE(chksum_DMS_HSC4_FrP01_DMS_FrP01_ChecksumHSC4,data,56,8); //Motorola / Big-endian
    }
}


