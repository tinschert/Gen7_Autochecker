global Scene

set length 1.5
set width 3.0
set height 2.6

set wh [expr {abs($width*.5)}]
 
set obj [gl newlist -1 compile]
gl enable cull_face
gl material f+b a+d .30 .30 .30 1
gl pushmatrix
gl enable normalize

gl pushmatrix
gl translate 0 [expr {-$wh}] [expr {$height*.5}]
gl scale $length $width $height
gl call $Scene(Obj-Box)
gl popmatrix

gl popmatrix
gl disable cull_face
gl endlist

return $obj

